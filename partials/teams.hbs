{{#if @custom.teamssection_button}}

<section class="teams-section">
  <h2 class="teams-title">Equipes por Fase</h2>
  <p class="teams-subtitle">Veja a evolução das equipes ao longo do Circuito Game Dev Quest.</p>

  <div class="teams-row">

    {{#get "posts" filter="slug:fase-1" limit="1"}}
    {{#foreach posts}}
    <a href="{{url}}" class="teams-card-container">
      <div class="teams-card-bg" style="background-image: url('{{feature_image}}');"></div>
      <div class="teams-card-text">
        <h3 class="teams-card-title">
          <strong>{{@custom.teams1_title}}</strong>
        </h3>
        <p class="teams-card-desc">
          {{@custom.teams1_description}}
        </p>

      </div>
    </a>
    {{/foreach}}
    {{/get}}

    {{#get "posts" filter="slug:fase-2" limit="1"}}
    {{#foreach posts}}
    <a href="{{url}}" class="teams-card-container">
      <div class="teams-card-bg" style="background-image: url('{{feature_image}}');"></div>
      <div class="teams-card-text">
        <h3 class="teams-card-title">
          <strong>{{@custom.teams2_title}}</strong>
        </h3>
        <p class="teams-card-desc">
          {{@custom.teams2_description}}
        </p>
      </div>
    </a>
    {{/foreach}}
    {{/get}}

    {{#get "posts" filter="slug:fase-3" limit="1"}}
    {{#foreach posts}}
    <a href="{{url}}" class="teams-card-container">
      <div class="teams-card-bg" style="background-image: url('{{feature_image}}');"></div>
      <div class="teams-card-text">
        <h3 class="teams-card-title">
          <strong>{{@custom.teams3_title}}</strong>
        </h3>
        <p class="teams-card-desc">
          {{@custom.teams3_description}}
        </p>
      </div>
    </a>
    {{/foreach}}
    {{/get}}

  </div>
</section>

{{/if}}