{{#if @teamssection_button_button }}

<section class="teams-section">
  <h2 class="teams-title">Equipes por Fase</h2>
  <p class="teams-subtitle">Veja a evolução das equipes ao longo do Circuito Game Dev Quest.</p>

  <div class="teams-row">

    {{#get "posts" filter="slug:fase-1" limit="1"}}
    {{#foreach posts}}
    <a href="{{url}}" class="teams-card-container">
      <div class="teams-card-bg" style="background-image: url('{{feature_image}}');"></div>
      <div class="teams-card-text">
        <h3 class="teams-card-title"><strong>Fase 1</strong></h3>
        <p class="teams-card-desc">Conheça as equipes que iniciaram o desafio.</p>
      </div>
    </a>
    {{/foreach}}
    {{/get}}

    {{#get "posts" filter="slug:fase-2" limit="1"}}
    {{#foreach posts}}
    <a href="{{url}}" class="teams-card-container">
      <div class="teams-card-bg" style="background-image: url('{{feature_image}}');"></div>
      <div class="teams-card-text">
        <h3 class="teams-card-title"><strong>Fase 2</strong></h3>
        <p class="teams-card-desc">Equipes que avançaram para a segunda etapa.</p>
      </div>
    </a>
    {{/foreach}}
    {{/get}}

    {{#get "posts" filter="slug:fase-3" limit="1"}}
    {{#foreach posts}}
    <a href="{{url}}" class="teams-card-container">
      <div class="teams-card-bg" style="background-image: url('{{feature_image}}');"></div>
      <div class="teams-card-text">
        <h3 class="teams-card-title"><strong>Fase 3</strong></h3>
        <p class="teams-card-desc">Finalistas do circuito Game Dev Quest.</p>
      </div>
    </a>
    {{/foreach}}
    {{/get}}

  </div>
</section>

{{/if}}