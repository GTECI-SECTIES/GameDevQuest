<section id="eventos" class="gallery-line">
  <h1 class="gallery-title" data-i18n="gallery_title">Eventos</h1>

  <div class="gallery-row">
    {{#get "posts" filter="tag:eventos" limit="all"}}
      {{#foreach posts}}
      <a href="{{url}}" class="via-card-borda-container">
        <div class="via-card-borda" style="background-image: url('{{feature_image}}');">
        </div>
        <div class="via-card-borda-text">
          <h3 class="via-title-card-borda"><strong>{{title}}</strong></h3>
        </div>
      </a>
      {{/foreach}}
    {{/get}}
  </div>
</section>
